/** 入口页样式 - 与 H5 StartScreen LANDING VIEW 风格一致 **/

.container {
  min-height: 100vh;
  background-color: #09090b;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 顶部装饰线 */
.top-line {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 1px;
  background: linear-gradient(90deg, transparent, #06b6d4, transparent);
  opacity: 0.5;
}

/* 主内容区 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48px 24px;
  z-index: 10;
}

/* 版本标签 */
.version-tag {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background-color: rgba(39, 39, 42, 0.5);
  border: 1rpx solid #3f3f46;
  border-radius: 4rpx;
  margin-bottom: 48rpx;
}

.version-icon {
  font-size: 20rpx;
  color: #a1a1aa;
  font-family: monospace;
}

.version-text {
  font-size: 20rpx;
  color: #a1a1aa;
  font-family: monospace;
  letter-spacing: 2rpx;
}

/* 标题区 */
.title-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.main-title {
  font-size: 72rpx;
  font-weight: 900;
  color: #ffffff;
  letter-spacing: -2rpx;
  text-shadow: 0 0 30rpx rgba(255, 255, 255, 0.1);
  margin-bottom: 16rpx;
}

.sub-title {
  font-size: 32rpx;
  color: #06b6d4;
  font-family: monospace;
  letter-spacing: 4rpx;
  text-transform: uppercase;
  opacity: 0.9;
}

/* 引言区 */
.quote-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  margin-bottom: 80rpx;
  max-width: 560rpx;
}

.quote-highlight {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.quote-desc {
  font-size: 28rpx;
  color: #a1a1aa;
  line-height: 1.8;
  white-space: pre-line;
}

/* 按钮区 */
.button-section {
  width: 100%;
  max-width: 480rpx;
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  background-color: #ffffff;
  border: none;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  box-shadow: 0 0 60rpx rgba(255, 255, 255, 0.2);
  transition: all 0.3s;
  /* 重置 button 默认样式 */
  margin: 0;
  padding: 0;
  line-height: 1;
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  background-color: #22d3ee;
  box-shadow: 0 0 60rpx rgba(34, 211, 238, 0.6);
  transform: scale(0.98);
}

.btn-text {
  font-size: 32rpx;
  font-weight: 900;
  color: #000000;
}

.btn-icon {
  font-size: 40rpx;
  font-weight: 700;
  color: #000000;
  transition: transform 0.3s;
}

.btn-primary:active .btn-icon {
  transform: translateX(8rpx);
}

/* 底部信息 */
.footer {
  padding: 32rpx 48rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.copyright {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.2);
  font-family: monospace;
  text-align: center;
}

.icp-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
  justify-content: center;
}

.icp-text, .link-text {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.2);
  font-family: monospace;
  text-decoration: underline;
  text-decoration-color: transparent;
  transition: all 0.2s;
}

.icp-text:active, .link-text:active {
  color: rgba(255, 255, 255, 0.4);
  text-decoration-color: rgba(255, 255, 255, 0.4);
}

.divider {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.1);
}
